<!-- ============================================   COURSES   ============================================= -->
      
    <!-- FORM VIEW -->
    <record model="ir.ui.view" id="open_academy_course_view_form">
      <field name="name">open_academy.course.view.form</field>
      <field name="model">course.course</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
                <h1>
                    <field name="title" placeholder="Course Name" />
                </h1>
                <notebook>
                    <page string="Description">
                        <group>
                            <field name="description"/>
                        </group>
                    </page>
                    <page string="Responsible">
                        <group>
                            <field name="responsible"/>
                        </group>
                    </page>
                    <page string="Sessions">
                        <group>
                            <field name="sessions"/>
                        </group>
                    </page>
                </notebook>
            </sheet>
        </form>
      </field>
    </record>
      
    <!-- TREE VIEW -->
    <record model="ir.ui.view" id="open_academy_course_view_tree">
      <field name="name">open_academy.course.view.tree</field>
      <field name="model">course.course</field>
      <field name="arch" type="xml">
        <tree>
            <field name="title"/>
            <field name="description"/>
            <field name="responsible"/>
        </tree>
      </field>
    </record>
      
    <!-- SEARCH VIEW -->
    <record model="ir.ui.view" id="open_academy_course_view_search">
      <field name="name">open_academy.course.view.search</field>
      <field name="model">course.course</field>
      <field name="arch" type="xml">
        <search>
            <field name="title"/>
            <field name="description"/>
            <field name="responsible"/>
            <filter name="my_courses" string="My Courses" domain="[('responsible', '=', uid)]"/>
            <group>
                <filter name="group_by_responsible" context="{'group_by': 'responsible'}"/>
            </group>
        </search>
      </field>
    </record>
      
<!-- ============================================   SESSIONS   ============================================= -->
      
    <!-- CALENDAR VIEW -->
    <record model="ir.ui.view" id="open_academy_session_view_calendar">
        <field name="name">open_academy.session.view.calendar</field>
        <field name="model">session.session</field>
        <field name="arch" type="xml">
            <calendar date_start="start_date" date_stop="end_date" color="instructor" mode="month" quick_add="False" scales="month,week">
                <field name="name"/>
                <field name="instructor" filters="True"/>
                <field name="course"/>
            </calendar>
        </field>
    </record>
      
    <!-- KANBAN VIEW -->
    <record model="ir.ui.view" id="open_academy_session_view_kanban">
        <field name="name">open_academy.session.view.kanban</field>
        <field name="model">session.session</field>
        <field name="arch" type="xml">
            <kanban default_group_by="course" class="o_kanban_small_column o_kanban_project_tasks">
                <field name="course"/>
                <field name="instructor"/>
                <templates>
                    <t t-name="kanban-box">
                         <div t-attf-class="oe_kanban_global_click">  <!-- ALLOWS TO SET CARDS AS CLICKABLE -->
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                        <div class="o_kanban_record_body">
                                            <field name="start_date"/>
                                            <field name="instructor"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
      
    <!-- GRAPH VIEW -->
    <record model="ir.ui.view" id="open_academy_session_view_graph">
        <field name="name">open_academy.session.view.graph</field>
        <field name="model">session.session</field>
        <field name="arch" type="xml">
            <graph>
                <field name="attendees"/>
                <field name="course"/>
            </graph>
        </field>
    </record>
      
    <!-- GANTT VIEW -->
    <record model="ir.ui.view" id="open_academy_session_view_gantt">
        <field name="name">open_academy.session.view.gantt</field>
        <field name="model">session.session</field>
        <field name="arch" type="xml">
            <gantt date_start="start_date" date_stop="end_date" color="instructor" default_group_by="instructor">
                <field name="name"/>
                <field name="instructor"/>
                <field name="course"/>
            </gantt>
        </field>
    </record>
      
    <!-- TREE VIEW -->
    <record model="ir.ui.view" id="open_academy_session_view_tree">
      <field name="name">open_academy.session.view.tree</field>
      <field name="model">session.session</field>
      <field name="arch" type="xml">
        <tree decoration-primary="duration&lt;5" decoration-danger="duration&gt;15">
            <field name="name"/>
            <field name="start_date"/>
            <field name="duration"/>
            <field name="end_date"/>
            <field name="instructor"/>
            <field name="course"/>
            <field name="attendees"/>
            <field name="number_of_seats"/>
            <field name="number_of_seats_pc" widget="progressbar"/>
        </tree>
      </field>
    </record>
      
    <!-- FORM VIEW -->
    <record model="ir.ui.view" id="open_academy_session_view_form">
      <field name="name">open_academy.session.view.form</field>
      <field name="model">session.session</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <button name="manage_attendees" string="Manage Attendees" type="object" class="oe_highlight" context="{'default_attendees_ids': attendees}"/>
                </group>
                <h1>
                    <field name="name" placeholder="Session Name" />
                </h1>
                <notebook>
                    <page string="Info">
                        <group colspan="2">
                            <group colspan="1" col="1">
                                <field name="start_date"/>
                                <field name="duration"/>
                                <field name="end_date"/>
                            </group>
                            <group colspan="1" col="1">
                                <field name="instructor" domain="['|', 
                                                                 ('instructor','=',True), 
                                                                 ('teacher','!=', False)]"/>
                                <field name="course"/>
                            </group>
                        </group>
                        <group>
                            <field name="number_of_seats"/>
                            <field name="number_of_seats_pc" widget="progressbar"/>
                            <field name="attendees"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </page>
                </notebook>
            </sheet>
        </form>
      </field>
    </record>
      
<!-- ============================================   PARTNER   ============================================= -->
      
    <!-- FORM VIEW -->
    <record id="partner_view_form" model="ir.ui.view">
        <field name="name">open_academy.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- find field description and add the field
                 idea_ids after it -->
            <xpath expr="//field[@name='function']" position="after">
              <field name="instructor"/>
              <field name="teacher"/>
              <field name="session_partner"/>
            </xpath>
        </field>
    </record>
      
<!-- ============================================   PARTNER FAX   ============================================= -->
      
    <!-- FORM VIEW -->
    <record id="partner_fax_view_form" model="ir.ui.view">
        <field name="name">open_academy.partner_fax.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- find field description and add the field
                 idea_ids after it -->
            <xpath expr="//field[@name='website']" position="before">
              <field name="fax_number"/>
            </xpath>
        </field>
    </record>

<!-- ============================================   SALE ORDER FAX   ========================================= -->
      
    <!-- FORM VIEW -->
    <record id="sale_order_fax_view_form" model="ir.ui.view">
        <field name="name">open_academy.sale_order.partner_fax.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
              <field name="fax_number"/>
            </xpath>
        </field>
    </record>
      
<!-- ===============================================   WIZARD   ============================================= -->
      
    <!-- FORM VIEW -->
    <record id="wizard_attendees_view_form" model="ir.ui.view">
        <field name="name">open_academy.wizard.attendees.view.form</field>
        <field name="model">wizard.openacademy.setattendees</field>
        <field name="arch" type="xml">
            <form>
                <h1>
                    <field name="session_id"/>
                </h1>
                <group>
                    <field name="attendees_ids"/>
                    <field name="test"/>
                </group>                
                <footer>
                    <button name="set_attendees" string="Set Attendees" type="object" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
      
<!-- ================================================================================================= -->
<!-- ==========================================   ACTIONS   ========================================== -->
<!-- ================================================================================================= -->
      
    <!-- ACTION DEFINITION WIZARD SETATTENDEES-->
    <record model="ir.actions.act_window" id="set_attendees_wizard">
        <field name="name">Manage Attendees</field>
        <field name="res_model">wizard.openacademy.setattendees</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{
            'default_session_id': active_id
            }</field>
    </record>

    <!-- ACTION DEFINITION COURSES-->
    <record model="ir.actions.act_window" id="open_academy.action_window_course">
        <field name="name">Courses</field>
        <field name="res_model">course.course</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="open_academy_course_view_search"/>
        <field name="context">{"search_default_my_courses":1}</field>
    </record>

    <!-- ACTION DEFINITION SESSIONS-->
    <record model="ir.actions.act_window" id="open_academy.action_window_session">
        <field name="name">Sessions</field>
        <field name="res_model">session.session</field>
        <field name="view_mode">kanban,graph,gantt,calendar,tree,form</field>
    </record>

    <!-- actions -->
    <menuitem name="Open Academy" id="open_academy.menu_root"/>   <!-- parent menu => MANDATORY-->

    <!-- COURSES MENU -->
    <menuitem name="Courses" id="open_academy.menu_courses" parent="open_academy.menu_root" action="open_academy.action_window_course"/>

    <!-- SESSIONS MENU -->
    <menuitem name="Sessions" id="open_academy.menu_sessions" parent="open_academy.menu_root"/>     
    </data>
</odoo>
